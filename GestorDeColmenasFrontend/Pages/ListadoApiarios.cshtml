@page
@model GestorDeColmenasFrontend.Pages.ListadoApiariosModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="light" lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Apiarios - Gestión de Apiarios</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries,typography"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#FFC107",
                        "background-light": "#F8F9FA",
                        "background-dark": "#1e293b",
                        "card-light": "#FFFFFF",
                        "card-dark": "#334155",
                        "text-light": "#343A40",
                        "text-dark": "#e2e8f0",
                        "text-muted": "#6B7280",
                        "border-light": "#e5e7eb",
                        "border-dark": "#475569",
                        "accent-honey": "#E69B00",
                        "accent-green": "#4CAF50",
                        "accent-blue": "#2196F3",
                        "accent-red": "#F44336",
                        "accent-orange": "#FF9800",
                    },
                    fontFamily: { "display": ["Inter", "sans-serif"] },
                    borderRadius: { "DEFAULT": "0.5rem", "lg": "0.75rem", "xl": "1rem", "full": "9999px" }
                }
            }
        };
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="font-display bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark">
    <div class="flex h-screen w-full flex-col lg:flex-row">

        <!-- ========== SIDEBAR ESCRITORIO (lg+) ========== -->
        <aside class="hidden lg:flex w-64 flex-col border-r border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark p-4">
            <!-- Info usuario -->
            <div class="flex items-center gap-3 px-2 mb-6">
                <img src="@(Model.Usuario?.FotoPerfil ?? "https://via.placeholder.com/150")" 
                     alt="Avatar" 
                     class="h-10 w-10 rounded-full object-cover" />
                <div class="flex flex-col">
                    <span class="text-base font-medium">@(Model.Usuario?.Nombre ?? "Usuario")</span>
                    <span class="text-text-muted text-sm">@(Model.Usuario?.Email ?? "email@ejemplo.com")</span>
                </div>
            </div>

            <!-- Navegación -->
            <nav class="flex flex-col gap-2">
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 text-text-muted" href="/PerfilUsuario">
                    <span class="material-symbols-outlined">person</span>
                    <span class="text-sm font-medium">Mi Perfil</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 text-text-muted" href="/Dashboard">
                    <span class="material-symbols-outlined">dashboard</span>
                    <span class="text-sm font-medium">Dashboard</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg bg-primary/20 text-text-light dark:text-text-dark font-medium" href="/ListadoApiarios">
                    <span class="material-symbols-outlined">hive</span>
                    <span class="text-sm">Apiarios</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 text-text-muted" href="/ListadoColmenas">
                    <span class="material-symbols-outlined">grid_view</span>
                    <span class="text-sm font-medium">Colmenas</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 text-text-muted" href="#">
                    <span class="material-symbols-outlined">description</span>
                    <span class="text-sm font-medium">Registros</span>
                </a>
            </nav>

            <!-- Cerrar sesión -->
            <div class="mt-auto">
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 text-text-muted" href="#">
                    <span class="material-symbols-outlined">logout</span>
                    <span class="text-sm font-medium">Cerrar Sesión</span>
                </a>
            </div>
        </aside>

        <!-- ========== CONTENIDO PRINCIPAL ========== -->
        <div class="flex-1 flex flex-col min-h-screen lg:min-h-0">

            <!-- ========== HEADER TABLET (md) ========== -->
            <header class="hidden md:flex lg:hidden items-center justify-between border-b border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark px-6 py-3 shadow-sm">
                <a class="flex items-center gap-4" href="/Dashboard">
                    <div class="text-primary size-8">
                        <svg class="w-full h-full" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M21.92,8.44l-8-4.57a2,2,0,0,0-1.84,0l-8,4.57a2,2,0,0,0-1,1.73V13.8a2,2,0,0,0,.13,2.44,1,1,0,0,0,.87.56H12a1,1,0,0,0,1-1V13.5a1,1,0,0,1,2,0V20a1,1,0,0,0,2,0V13.5a1,1,0,0,1,2,0v2.3a2,2,0,0,0,1,1.73l.2,0a2,2,0,0,0,1.72-1,2,2,0,0,0,.08-1V10.17A2,2,0,0,0,21.92,8.44ZM12,11.25a2.75,2.75,0,1,1,2.75-2.75A2.75,2.75,0,0,1,12,11.25Z"></path>
                        </svg>
                    </div>
                    <h1 class="text-lg font-bold">Gestión de Apiarios</h1>
                </a>
                <div class="flex items-center gap-4">
                    <button class="relative rounded-full p-2 hover:bg-gray-100 dark:hover:bg-slate-700">
                        <span class="material-symbols-outlined">notifications</span>
                    </button>
                    <a href="/PerfilUsuario">
                        <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full size-10 hover:ring-2 hover:ring-primary transition-all"
                             style="background-image: url('@(Model.Usuario?.FotoPerfil ?? "https://via.placeholder.com/150")');"></div>
                    </a>
                </div>
            </header>

            <!-- ========== HEADER MÓVIL (sm) ========== -->
            <header class="md:hidden flex items-center justify-between p-4 border-b border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark">
                <a href="/Dashboard" class="p-2 -ml-2">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <h1 class="text-xl font-bold">Apiarios</h1>
                <div class="w-10"></div>
            </header>

            <!-- ========== CONTENIDO ========== -->
            <main class="flex-1 overflow-y-auto p-4 md:p-8">
                <div class="mx-auto max-w-7xl">

                    <!-- Título y tabs (tablet) -->
                    <div class="mb-8">
                        <h2 class="text-3xl lg:text-4xl font-black tracking-tight">Apiarios</h2>
                        
                        <!-- Tabs navegación (solo tablet) -->
                        <div class="hidden md:block lg:hidden mt-4 border-b border-border-light dark:border-border-dark">
                            <nav class="-mb-px flex space-x-8">
                                <a class="whitespace-nowrap border-b-2 border-transparent px-1 py-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700" href="/PerfilUsuario">Perfil</a>
                                <a class="whitespace-nowrap border-b-2 border-primary px-1 py-4 text-sm font-bold text-primary" href="/ListadoApiarios">Apiarios</a>
                                <a class="whitespace-nowrap border-b-2 border-transparent px-1 py-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700" href="/ListadoColmenas">Colmenas</a>
                                <a class="whitespace-nowrap border-b-2 border-transparent px-1 py-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700" href="#">Registros</a>
                            </nav>
                        </div>
                    </div>

                    <!-- Subtítulo y botón agregar -->
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
                        <h3 class="hidden md:block text-2xl font-semibold">Lista de Apiarios</h3>
                        <button id="btnAgregarApiario" class="flex h-10 items-center justify-center gap-2 rounded-lg bg-primary px-5 text-sm font-bold text-gray-900 shadow-sm hover:bg-accent-honey w-full md:w-auto">
                            <span class="material-symbols-outlined text-xl">add</span>
                            <span>Agregar Nuevo Apiario</span>
                        </button>
                    </div>

                    <!-- Tabla de apiarios -->
                    <div class="overflow-hidden rounded-lg border border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark shadow-sm">
                        <div class="overflow-x-auto">
                            <table class="w-full text-left text-sm">
                                <thead class="bg-background-light dark:bg-slate-800 border-b border-border-light dark:border-border-dark">
                                    <tr>
                                        <th class="px-6 py-4 font-semibold uppercase tracking-wider text-text-muted" scope="col">Nombre</th>
                                        <th class="px-6 py-4 font-semibold uppercase tracking-wider text-text-muted" scope="col">Ubicación</th>
                                        <th class="hidden md:table-cell px-6 py-4 font-semibold uppercase tracking-wider text-text-muted text-center" scope="col">Colmenas</th>
                                        <th class="px-6 py-4 text-right" scope="col">
                                            <span class="sr-only">Acciones</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-border-light dark:divide-border-dark">
                                    @if (Model.Apiarios != null && Model.Apiarios.Any())
                                    {
                                        @foreach (var apiario in Model.Apiarios)
                                        {
                                            <tr class="hover:bg-black/5 dark:hover:bg-white/5">
                                                <td class="whitespace-nowrap px-6 py-4 font-medium">@apiario.Nombre</td>
                                                <td class="whitespace-nowrap px-6 py-4 text-text-muted">@apiario.UbicacionDeReferencia</td>
                                                <td class="hidden md:table-cell whitespace-nowrap px-6 py-4 text-center text-text-muted">@apiario.CantidadColmenas</td>
                                                <td class="whitespace-nowrap px-6 py-4 text-right">
                                                    <div class="flex items-center justify-end gap-2">
                                                        <a asp-page="/DetallesApiario" asp-route-id="@apiario.Nombre" 
                                                           class="flex h-9 w-9 items-center justify-center rounded-lg hover:bg-gray-100 dark:hover:bg-slate-700" 
                                                           title="Ver Detalles">
                                                            <span class="material-symbols-outlined text-xl text-text-muted">visibility</span>
                                                        </a>
                                                        <button class="flex h-9 w-9 items-center justify-center rounded-lg text-accent-blue hover:bg-blue-50 dark:hover:bg-blue-900/20" title="Editar">
                                                            <span class="material-symbols-outlined text-xl">edit</span>
                                                        </button>
                                                        <button class="btn-eliminar flex h-9 w-9 items-center justify-center rounded-lg text-accent-red hover:bg-red-50 dark:hover:bg-red-900/20" 
                                                                title="Eliminar"
                                                                data-id="@apiario.Id"
                                                                data-nombre="@apiario.Nombre">
                                                            <span class="material-symbols-outlined text-xl">delete</span>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="px-6 py-8 text-center text-text-muted">
                                                <span class="material-symbols-outlined text-4xl mb-2">hive</span>
                                                <p>No hay apiarios registrados</p>
                                                <p class="text-sm">Haz clic en "Agregar Nuevo Apiario" para comenzar</p>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>

            <!-- ========== NAVEGACIÓN MÓVIL ========== -->
            <nav class="md:hidden sticky bottom-0 bg-card-light dark:bg-card-dark border-t border-border-light dark:border-border-dark shadow-lg">
                <div class="flex justify-around p-2">
                    <a class="flex flex-col items-center justify-center p-2 rounded-lg text-text-muted hover:bg-gray-100" href="/PerfilUsuario">
                        <span class="material-symbols-outlined">person</span>
                        <span class="text-xs mt-1">Perfil</span>
                    </a>
                    <a class="flex flex-col items-center justify-center p-2 rounded-lg text-text-muted hover:bg-gray-100" href="/Dashboard">
                        <span class="material-symbols-outlined">dashboard</span>
                        <span class="text-xs mt-1">Dashboard</span>
                    </a>
                    <a class="flex flex-col items-center justify-center p-2 rounded-lg text-primary" href="/ListadoApiarios">
                        <span class="material-symbols-outlined">hive</span>
                        <span class="text-xs mt-1 font-bold">Apiarios</span>
                    </a>
                    <a class="flex flex-col items-center justify-center p-2 rounded-lg text-text-muted hover:bg-gray-100" href="#">
                        <span class="material-symbols-outlined">description</span>
                        <span class="text-xs mt-1">Registros</span>
                    </a>
                </div>
            </nav>
        </div>
    </div>

    <!-- ========== MODAL AGREGAR APIARIO ========== -->
    <div id="modalApiario" class="hidden fixed inset-0 flex items-center justify-center bg-black/50 z-50">
        <div class="bg-card-light dark:bg-card-dark rounded-lg shadow-lg p-6 w-96 mx-4">
            <h2 class="text-lg font-bold mb-4">Nuevo Apiario</h2>
            <form method="post" asp-page-handler="AgregarApiario">
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium mb-1">Nombre</label>
                        <input asp-for="NuevoApiario.Nombre" class="w-full border border-border-light dark:border-border-dark rounded-lg p-2.5 bg-card-light dark:bg-card-dark focus:ring-2 focus:ring-primary focus:border-primary" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1">Latitud</label>
                        <input asp-for="NuevoApiario.Latitud" class="w-full border border-border-light dark:border-border-dark rounded-lg p-2.5 bg-card-light dark:bg-card-dark focus:ring-2 focus:ring-primary focus:border-primary" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1">Longitud</label>
                        <input asp-for="NuevoApiario.Longitud" class="w-full border border-border-light dark:border-border-dark rounded-lg p-2.5 bg-card-light dark:bg-card-dark focus:ring-2 focus:ring-primary focus:border-primary" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1">Ubicación de referencia</label>
                        <input asp-for="NuevoApiario.UbicacionDeReferencia" class="w-full border border-border-light dark:border-border-dark rounded-lg p-2.5 bg-card-light dark:bg-card-dark focus:ring-2 focus:ring-primary focus:border-primary" />
                    </div>
                </div>
                <div class="flex justify-end gap-3 mt-6">
                    <button type="button" id="btnCerrarModal" class="px-4 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 font-medium hover:bg-gray-300 dark:hover:bg-gray-600">
                        Cancelar
                    </button>
                    <button type="submit" class="px-4 py-2 rounded-lg bg-primary text-gray-900 font-bold hover:bg-accent-honey">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- ========== MODAL CONFIRMAR ELIMINAR ========== -->
    <div id="modalEliminar" class="hidden fixed inset-0 flex items-center justify-center bg-black/50 z-50">
        <div class="bg-card-light dark:bg-card-dark rounded-lg shadow-lg p-6 w-96 mx-4">
            <div class="flex items-center gap-3 mb-4">
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-red-100 dark:bg-red-900/30">
                    <span class="material-symbols-outlined text-accent-red">warning</span>
                </div>
                <h2 class="text-lg font-bold">Confirmar Eliminación</h2>
            </div>
            <p id="mensajeEliminar" class="text-text-muted mb-6"></p>
            <div class="flex justify-end gap-3">
                <button type="button" id="btnCancelarEliminar" class="px-4 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 font-medium hover:bg-gray-300 dark:hover:bg-gray-600">
                    No
                </button>
                <button type="button" id="btnConfirmarEliminar" class="px-4 py-2 rounded-lg bg-accent-red text-white font-bold hover:bg-red-700">
                    Sí
                </button>
            </div>
        </div>
    </div>

    <script>
        // Modal Agregar
        const modalAgregar = document.getElementById("modalApiario");
        document.getElementById("btnAgregarApiario").onclick = () => {
            modalAgregar.classList.remove("hidden");
            document.body.classList.add("overflow-hidden");
        };
        document.getElementById("btnCerrarModal").onclick = () => {
            modalAgregar.classList.add("hidden");
            document.body.classList.remove("overflow-hidden");
        };

        // Modal Eliminar
        const modalEliminar = document.getElementById("modalEliminar");
        const mensajeEliminar = document.getElementById("mensajeEliminar");
        let apiarioIdAEliminar = null;

        // Agregar event listeners a todos los botones de eliminar
        document.querySelectorAll(".btn-eliminar").forEach(btn => {
            btn.addEventListener("click", () => {
                const id = btn.dataset.id;
                const nombre = btn.dataset.nombre;
                apiarioIdAEliminar = id;
                mensajeEliminar.textContent = `¿Está seguro que desea eliminar el apiario: ${nombre}?`;
                modalEliminar.classList.remove("hidden");
                document.body.classList.add("overflow-hidden");
            });
        });

        // Botón Cancelar (No)
        document.getElementById("btnCancelarEliminar").onclick = () => {
            modalEliminar.classList.add("hidden");
            document.body.classList.remove("overflow-hidden");
            apiarioIdAEliminar = null;
        };

        // Botón Confirmar (Sí)
        document.getElementById("btnConfirmarEliminar").onclick = async () => {
            if (!apiarioIdAEliminar) return;

            try {
                const response = await fetch(`/ListadoApiarios?handler=EliminarApiario&id=${apiarioIdAEliminar}`, {
                    method: "POST",
                    headers: {
                        "RequestVerificationToken": document.querySelector('input[name="__RequestVerificationToken"]')?.value || ""
                    }
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    // Recargar la página para mostrar la lista actualizada
                    window.location.reload();
                } else {
                    alert("Error al eliminar el apiario: " + (result.message || "Error desconocido"));
                    modalEliminar.classList.add("hidden");
                    document.body.classList.remove("overflow-hidden");
                }
            } catch (error) {
                alert("Error de conexión: " + error.message);
                modalEliminar.classList.add("hidden");
                document.body.classList.remove("overflow-hidden");
            }
        };
    </script>

    @Html.AntiForgeryToken()
</body>
</html>
