@page
@using GestorDeColmenasFrontend.Modelos
@model GestorDeColmenasFrontend.Pages.ListadoColmenasModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="light" lang="es">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Listado de Colmenas - Gestión de Apiarios</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#FFC107",
                        "background-light": "#F8F9FA",
                        "background-dark": "#111827",
                        "card-light": "#FFFFFF",
                        "card-dark": "#1f2937",
                        "text-light": "#374151",
                        "text-dark": "#f3f4f6",
                        "border-light": "#e5e7eb",
                        "border-dark": "#374151",
                        "accent-honey": "#E69B00",
                        "accent-green": "#10b981",
                        "accent-red": "#ef4444",
                        "accent-orange": "#f59e0b",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                },
            },
        };
    </script>
    <style type="text/tailwindcss">
        @@layer base {
            .material-symbols-outlined {
                font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
            }
        }
    </style>
</head>
<body class="font-display bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark min-h-screen flex">
    <aside class="w-64 border-r border-border-light dark:border-border-dark bg-white dark:bg-gray-900 hidden lg:flex flex-col sticky top-0 h-screen">
        <div class="p-6">
            <div class="flex items-center gap-3 mb-8 mt-2">
                <img alt="Profile" class="w-10 h-10 rounded-full" src="@(Model.Usuario?.FotoPerfil ?? "https://via.placeholder.com/150")" />
                <div class="overflow-hidden">
                    <p class="text-sm font-bold truncate">@(Model.Usuario?.Nombre ?? "Usuario")</p>
                    <p class="text-xs text-gray-500 truncate">@(Model.Usuario?.Email ?? "")</p>
                </div>
            </div>
            <nav class="space-y-1">
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors" href="/PerfilUsuario">
                    <span class="material-symbols-outlined">person</span>
                    <span class="text-sm font-medium">Mi Perfil</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors" href="/Dashboard">
                    <span class="material-symbols-outlined">dashboard</span>
                    <span class="text-sm font-medium">Dashboard</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors" href="/ListadoApiarios">
                    <span class="material-symbols-outlined">hive</span>
                    <span class="text-sm font-medium">Apiarios</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg bg-primary/10 text-accent-honey transition-colors" href="/ListadoColmenas">
                    <span class="material-symbols-outlined" style="font-variation-settings: 'FILL' 1">hive</span>
                    <span class="text-sm font-bold">Colmenas</span>
                </a>
            </nav>
        </div>
        <div class="mt-auto p-6 border-t border-border-light dark:border-border-dark">
            <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-600 dark:text-gray-400 hover:text-red-500 transition-colors" href="#">
                <span class="material-symbols-outlined">logout</span>
                <span class="text-sm font-medium">Cerrar Sesión</span>
            </a>
        </div>
    </aside>
    <main class="flex-1 p-8 overflow-y-auto">
        <div class="max-w-7xl mx-auto">
            <div class="mb-8 flex flex-col md:flex-row md:items-center justify-between gap-4">
                <div>
                    <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white">Colmenas</h1>
                    <p class="mt-2 text-gray-600 dark:text-gray-400">Listado de colmenas con mediciones de cuadros y sensores externos.</p>
                </div>

                @* Button now opens modal instead of submitting immediately *@
                <div class="flex items-center gap-3">
                    <button type="button" id="btnAbrirModalColmena"
                            class="inline-flex items-center justify-center gap-2 rounded-lg bg-primary/10 text-accent-honey border-accent-honey border-2 px-6 py-2.5 text-sm font-bold shadow-sm transition-colors hover:bg-accent-honey hover:text-white focus:ring-2 focus:ring-primary focus:ring-offset-2">
                        <span class="material-symbols-outlined text-current">add</span>
                        <span class="font-bold text-current">Agregar Colmena</span>
                    </button>
                </div>
            </div>

            @if (Model.ErroresCarga.Any())
            {
                <div class="mb-6 p-4 bg-red-100 dark:bg-red-900/30 border border-accent-red rounded-lg">
                    <div class="flex items-center gap-2 text-accent-red dark:text-red-300 font-medium">
                        <span class="material-symbols-outlined">warning</span>
                        Algunos datos no pudieron cargarse:
                    </div>
                    <ul class="mt-2 text-sm text-accent-red dark:text-red-300 list-disc list-inside">
                        @foreach (var error in Model.ErroresCarga)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            <div class="bg-white dark:bg-card-dark rounded-xl shadow-sm border border-border-light dark:border-border-dark overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left border-collapse">
                        <thead>
                            <tr class="bg-primary/10 dark:bg-gray-800/50 text-accent-honey dark:text-gray-400 text-xs uppercase font-bold tracking-wider">
                                <th class="px-6 py-4 border-b border-border-light dark:border-border-dark">Colmena</th>
                                <th class="px-6 py-4 border-b border-border-light dark:border-border-dark">Cuadros</th>
                                <th class="px-6 py-4 border-b border-border-light dark:border-border-dark text-center">Temp. Int. 1</th>
                                <th class="px-6 py-4 border-b border-border-light dark:border-border-dark text-center">Temp. Int. 2</th>
                                <th class="px-6 py-4 border-b border-border-light dark:border-border-dark text-center">Temp. Int. 3</th>
                                <th class="px-6 py-4 border-b border-border-light dark:border-border-dark text-center">Temp. Ext.</th>
                                <th class="px-6 py-4 border-b border-border-light dark:border-border-dark text-center">Peso</th>
                                <th class="px-6 py-4 border-b border-border-light dark:border-border-dark">Estado</th>
                                <th class="px-6 py-4 border-b border-border-light dark:border-border-dark"><span class="sr-only">Acciones</span></th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-border-light dark:divide-border-dark">
                            @{
                                if (!Model.Colmenas.Any())
                                {
                                    <tr>
                                        <td colspan="9" class="px-6 py-8 text-center text-text-muted">
                                            <span class="material-symbols-outlined text-4xl mb-2">grid_view</span>
                                            <p>No hay colmenas registradas</p>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var colmena in Model.Colmenas)
                                    {
                                        var cuadros = colmena.Cuadros ?? new List<CuadroModel>();
                                        var cuadrosCount = Math.Max(1, cuadros.Count);
                                        var (bgColor, textColor, dotColor) = GetStatusColors(colmena.Estado);
                                        if (cuadros.Count > 0)
                                        {
                                            for (int i = 0; i < cuadros.Count; i++)
                                            {
                                                var cuadro = cuadros[i];
                                                var ultima = cuadro?.UltimaMedicion;
                                                <tr class="group hover:bg-gray-50/50 dark:hover:bg-gray-800/30">
                                                    @* First row: include colmena cells with rowspan *@
                                                    @if (i == 0)
                                                    {
                                                        <td class="px-6 py-4 font-bold text-gray-900 dark:text-white align-top border-r border-border-light dark:border-border-dark" rowspan="@cuadrosCount">
                                                            <a class="hover:text-primary hover:underline" href="/DetalleColmena/@colmena.Id">@colmena.Nombre</a>
                                                        </td>
                                                    }
                                                    <td class="px-6 py-4 text-gray-500 dark:text-gray-400 font-medium italic">
                                                        Cuadro @(i + 1)
                                                    </td>
                                                    <td class="px-6 py-4 text-center">
                                                        @FormatTemp(ultima?.TempInterna1)
                                                    </td>
                                                    <td class="px-6 py-4 text-center">
                                                        @FormatTemp(ultima?.TempInterna2)
                                                    </td>
                                                    <td class="px-6 py-4 text-center">
                                                        @FormatTemp(ultima?.TempInterna3)
                                                    </td>

                                                    @* Append the summary cells (external temp, peso, estado, acciones) on the first cuadro row with rowspan *@
                                                    @if (i == 0)
                                                    {
                                                        <td class="px-6 py-4 text-center align-middle border-l border-border-light dark:border-border-dark font-medium" rowspan="@cuadrosCount">
                                                            @FormatTemp(colmena.UltimaMedicion?.TempExterna)
                                                        </td>
                                                        <td class="px-6 py-4 text-center align-middle border-l border-border-light dark:border-border-dark font-medium" rowspan="@cuadrosCount">
                                                            @FormatPeso(colmena.UltimaMedicion?.Peso)
                                                        </td>
                                                        <td class="px-6 py-4 align-middle border-l border-border-light dark:border-border-dark" rowspan="@cuadrosCount">
                                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold @bgColor @textColor">
                                                                <span class="w-1.5 h-1.5 mr-1.5 @dotColor rounded-full"></span>
                                                                @colmena.EstadoTexto
                                                            </span>
                                                        </td>
                                                        <td class="px-6 py-4 text-right align-middle border-l border-border-light dark:border-border-dark" rowspan="@cuadrosCount">
                                                            <a class="text-primary hover:text-accent-honey font-bold transition-colores" href="/DetalleColmena/@colmena.Id">Ver Detalles</a>
                                                        </td>
                                                    }
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr class="group hover:bg-gray-50/50 dark:hover:bg-gray-800/30">
                                                <td class="px-6 py-4 font-bold text-gray-900 dark:text-white align-top border-r border-border-light dark:border-border-dark">
                                                    <a class="hover:text-primary hover:underline" href="/DetalleColmena/@colmena.Id">@colmena.Nombre</a>
                                                </td>
                                                <td class="px-6 py-4 text-gray-500 dark:text-gray-400 italic">Sin cuadros</td>
                                                <td class="px-6 py-4 text-center">-</td>
                                                <td class="px-6 py-4 text-center">-</td>
                                                <td class="px-6 py-4 text-center">-</td>
                                                <td class="px-6 py-4 text-center align-middle border-l border-border-light dark:border-border-dark font-medium">@FormatTemp(colmena.UltimaMedicion?.TempExterna)</td>
                                                <td class="px-6 py-4 text-center align-middle border-l border-border-light dark:border-border-dark font-medium">@FormatPeso(colmena.UltimaMedicion?.Peso)</td>
                                                <td class="px-6 py-4 align-middle border-l border-border-light dark:border-border-dark">
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold @(GetStatusColors(colmena.Estado).Item1) @(GetStatusColors(colmena.Estado).Item2)">
                                                        <span class="w-1.5 h-1.5 mr-1.5 @(GetStatusColors(colmena.Estado).Item3) rounded-full"></span>
                                                        @colmena.EstadoTexto
                                                    </span>
                                                </td>
                                                <td class="px-6 py-4 text-right align-middle border-l border-border-light dark:border-border-dark">
                                                    <a class="text-primary hover:text-accent-honey font-bold transition-colores" href="/DetalleColmena/@colmena.Id">Ver Detalles</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    @* Modal for creating a new Colmena (uses PageModel.NuevaColmena and posts to handler AgregarColmena) *@
    <div id="modalColmena" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/50">
        <div class="bg-card-light dark:bg-card-dark rounded-lg shadow-lg p-6 w-full max-w-lg mx-4">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-bold">Nueva Colmena</h2>
                <button id="btnCerrarModalColmena" class="p-1 rounded hover:bg-gray-100 dark:hover:bg-gray-800">
                    <span class="material-symbols-outlined">close</span>
                </button>
            </div>

            <form method="post" asp-page-handler="AgregarColmena" class="space-y-4">
                <div class="grid grid-cols-1 gap-4">
                    <div>
                        <label class="block text-sm font-medium mb-1">Nombre</label>
                        <input asp-for="NuevaColmena.Nombre" class="w-full border border-border-light dark:border-border-dark rounded-lg p-2.5 bg-card-light dark:bg-card-dark focus:ring-2 focus:ring-primary focus:border-primary" />
                        <span asp-validation-for="NuevaColmena.Nombre" class="text-sm text-accent-red"></span>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1">Descripción</label>
                        <textarea asp-for="NuevaColmena.Descripcion" class="w-full border border-border-light dark:border-border-dark rounded-lg p-2.5 bg-card-light dark:bg-card-dark focus:ring-2 focus:ring-primary focus:border-primary"></textarea>
                        <span asp-validation-for="NuevaColmena.Descripcion" class="text-sm text-accent-red"></span>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1">Apiario</label>
                        <select asp-for="NuevaColmena.ApiarioId" class="w-full border border-border-light dark:border-border-dark rounded-lg p-2.5 bg-card-light dark:bg-card-dark">
                            <option value="">-- Seleccione --</option>
                            @foreach (var api in Model.Apiarios)
                            {
                                <option value="@api.Id" selected="@(Model.NuevaColmena?.ApiarioId == api.Id ? "selected" : null)">@api.Nombre</option>
                            }
                        </select>
                        <span asp-validation-for="NuevaColmena.ApiarioId" class="text-sm text-accent-red"></span>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1">Cantidad de cuadros</label>
                        <input asp-for="NuevaColmena.CantidadCuadros" type="number" min="1" class="w-full border border-border-light dark:border-border-dark rounded-lg p-2.5 bg-card-light dark:bg-card-dark" />
                        <span asp-validation-for="NuevaColmena.CantidadCuadros" class="text-sm text-accent-red"></span>
                    </div>
                </div>

                <div class="flex justify-end gap-3 mt-4">
                    <button type="button" id="btnCancelarModalColmena" class="px-4 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 border border-gray-400/60 dark:border-gray-500/60 text-gray-600 bg-transparent font-medium hover:bg-gray-100 dark:hover:bg-gray-600">
                        Cancelar
                    </button>
                    <button type="submit" class="px-4 py-2 rounded-lg bg-primary/10 text-accent-honey border-2 border-accent-honey font-bold hover:text-white hover:bg-accent-honey">
                        Guardar
                    </button>
                </div>

                <div class="mt-2">
                    <span asp-validation-summary="ModelOnly" class="text-sm text-accent-red"></span>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Modal control
        const modalColmena = document.getElementById('modalColmena');
        const btnAbrirModal = document.getElementById('btnAbrirModalColmena');
        const btnCerrarModal = document.getElementById('btnCerrarModalColmena');
        const btnCancelarModal = document.getElementById('btnCancelarModalColmena');

        function abrirModalColmena() {
            modalColmena.classList.remove('hidden');
            document.body.classList.add('overflow-hidden');
        }

        function cerrarModalColmena() {
            modalColmena.classList.add('hidden');
            document.body.classList.remove('overflow-hidden');
        }

        btnAbrirModal?.addEventListener('click', abrirModalColmena);
        btnCerrarModal?.addEventListener('click', cerrarModalColmena);
        btnCancelarModal?.addEventListener('click', cerrarModalColmena);

        // If server-side set MostrarModal (validation errors), open modal on load so user sees errors.
        @if (Model.MostrarModal)
        {
            <text>
            document.addEventListener('DOMContentLoaded', function () {
                abrirModalColmena();
            });
            </text>
        }
    </script>

</body>
</html>

@functions {
    (string bgColor, string textColor, string dotColor) GetStatusColors(CondicionColmena? estado)
    {
        return estado switch
        {
            CondicionColmena.OPTIMO => ("bg-green-100 dark:bg-green-900/50", "text-accent-green dark:text-green-300", "bg-accent-green"),
            CondicionColmena.NECESITA_REVISION => ("bg-orange-100 dark:bg-orange-900/50", "text-accent-orange dark:text-orange-300", "bg-accent-orange"),
            CondicionColmena.EN_PELIGRO => ("bg-red-100 dark:bg-red-900/50", "text-accent-red dark:text-red-300", "bg-accent-red"),
            _ => ("bg-gray-200 dark:bg-gray-600", "text-gray-800 dark:text-gray-300", "bg-gray-500")
        };
    }

    string FormatTemp(float? value)
    {
        if (value == null || value == 0f) return "-";
        return value.Value.ToString("F1", System.Globalization.CultureInfo.InvariantCulture) + "°C";
    }

    string FormatPeso(float? value)
    {
        if (value == null || value <= 0f) return "-";
        return value.Value.ToString("F1", System.Globalization.CultureInfo.InvariantCulture) + " kg";
    }
}