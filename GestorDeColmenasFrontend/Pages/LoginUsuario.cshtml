@page
@model GestorDeColmenasFrontend.Pages.LoginUsuarioModel
@{
}

<!DOCTYPE html>
<html class="light" lang="es">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Login - Gestor de Apiarios</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#EAB308",
                        "primary-dark": "#CA8A04",
                        "background-light": "#fafafa",
                        "background-dark": "#1d1e20",
                    },
                    fontFamily: {
                        "display": ["Manrope", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style type="text/tailwindcss">
        body {
            font-family: 'Manrope', sans-serif;
        }
        .soft-shadow {
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.04), 0 8px 10px -6px rgba(0, 0, 0, 0.04);
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark min-h-screen flex items-center justify-center p-3 sm:p-4 md:p-6">
    <div class="w-full max-w-sm md:max-w-md lg:max-w-lg bg-white dark:bg-zinc-900 rounded-lg sm:rounded-xl soft-shadow overflow-hidden flex flex-col border border-zinc-100 dark:border-zinc-800">
        <!-- Header -->
        <div class="pt-8 sm:pt-10 md:pt-12 pb-6 sm:pb-8 px-4 sm:px-6 md:px-8 flex flex-col items-center">
            <div class="mb-4 sm:mb-6 flex items-center justify-center w-16 sm:w-20 h-16 sm:h-20 bg-primary/10 rounded-full text-primary">
                <svg class="w-12 h-12 text-primary" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2L4.5 6.5v11L12 22l7.5-4.5v-11L12 2z"></path>
                    <path d="M12 22V12"></path>
                    <path d="M12 12l7.5-4.5"></path>
                    <path d="M12 12L4.5 7.5"></path>
                    <path d="M7.5 10.5l4.5 2.5 4.5-2.5"></path>
                    <path d="M7.5 15.5l4.5 2.5 4.5-2.5"></path>
                    <path d="M12 7l4.5-2.5"></path>
                    <path d="M12 7L7.5 4.5"></path>
                </svg>
            </div>
            <h1 class="text-xl sm:text-2xl md:text-3xl font-extrabold tracking-tight text-center text-zinc-900 dark:text-white">Gestor de Apiarios</h1>
            <p class="text-xs sm:text-sm md:text-base text-zinc-500 dark:text-zinc-400 mt-2 text-center">Bienvenido de nuevo, ingresa tus credenciales.</p>
        </div>

        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(Model.MensajeError))
        {
            <div class="mx-4 sm:mx-6 md:mx-8 mb-4 p-3 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-900/50 rounded-lg text-red-700 dark:text-red-400 text-xs sm:text-sm">
                <span class="material-symbols-outlined text-base align-middle mr-2">error</span>
                @Model.MensajeError
            </div>
        }
        <!-- Form -->
        <form method="post" class="px-4 sm:px-6 md:px-8 pb-8 sm:pb-10 flex flex-col gap-4 sm:gap-5 md:gap-6">
            <!-- Email Field -->
            <div class="flex flex-col gap-2">
                <label class="text-zinc-700 dark:text-zinc-300 text-xs sm:text-sm font-semibold flex items-center gap-2">
                    <span class="material-symbols-outlined text-sm">mail</span>
                    <span>Correo electrónico</span>
                </label>
                <input asp-for="Correo" 
                       class="form-input w-full rounded-lg border border-zinc-200 dark:border-zinc-700 bg-white dark:bg-zinc-800 text-zinc-900 dark:text-white h-10 sm:h-11 md:h-12 px-3 sm:px-4 focus:ring-2 focus:ring-primary/20 focus:border-primary placeholder:text-zinc-400 text-xs sm:text-sm transition-all" 
                       placeholder="ejemplo@correo.com" 
                       type="email"
                       required />
                <span asp-validation-for="Correo" class="text-red-600 dark:text-red-400 text-xs mt-1"></span>
            </div>

            <!-- Password Field -->
            <div class="flex flex-col gap-2">
                <div class="flex items-center justify-between">
                    <label class="text-zinc-700 dark:text-zinc-300 text-xs sm:text-sm font-semibold flex items-center gap-2">
                        <span class="material-symbols-outlined text-sm">lock</span>
                        <span>Contraseña</span>
                    </label>
                    <a class="text-primary-dark dark:text-primary text-xs font-bold hover:underline transition-colors" href="#">¿Olvidaste tu contraseña?</a>
                </div>
                <div class="relative">
                    <input asp-for="Contraseña" 
                           id="passwordInput"
                           class="form-input w-full rounded-lg border border-zinc-200 dark:border-zinc-700 bg-white dark:bg-zinc-800 text-zinc-900 dark:text-white h-10 sm:h-11 md:h-12 px-3 sm:px-4 pr-12 focus:ring-2 focus:ring-primary/20 focus:border-primary placeholder:text-zinc-400 text-xs sm:text-sm transition-all" 
                           placeholder="••••••••" 
                           type="password"
                           required />
                    <button type="button" 
                            class="absolute right-3 sm:right-4 top-1/2 -translate-y-1/2 text-zinc-400 dark:text-zinc-500 hover:text-zinc-600 dark:hover:text-zinc-400 transition-colors p-1" 
                            id="togglePassword"
                            onclick="togglePasswordVisibility()"
                            aria-label="Mostrar/ocultar contraseña">
                        <span class="material-symbols-outlined text-base sm:text-lg" id="visibilityIcon">visibility</span>
                    </button>
                </div>
                <span asp-validation-for="Contraseña" class="text-red-600 dark:text-red-400 text-xs mt-1"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="w-full bg-primary hover:bg-primary-dark text-white h-10 sm:h-11 md:h-12 rounded-lg font-bold text-xs sm:text-base tracking-wide flex items-center justify-center gap-2 transition-colors mt-2 shadow-sm shadow-yellow-900/10 active:scale-95">
                <span>Iniciar Sesión</span>
                <span class="material-symbols-outlined text-base sm:text-lg md:text-xl hidden sm:inline">arrow_forward</span>
            </button>

            <!-- Divider -->
            <div class="relative my-2 sm:my-4">
                <div aria-hidden="true" class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-zinc-100 dark:border-zinc-800"></div>
                </div>
                <div class="relative flex justify-center text-xs uppercase">
                    <span class="bg-white dark:bg-zinc-900 px-2 sm:px-3 text-zinc-400 font-medium tracking-widest text-[10px] sm:text-xs">O</span>
                </div>
            </div>

            <!-- Register Link -->
            <div class="text-center">
                <p class="text-zinc-500 dark:text-zinc-400 text-xs sm:text-sm">
                    ¿Aún no tienes cuenta?
                    <a class="text-primary-dark dark:text-primary font-bold hover:underline transition-colors" href="/RegistroUsuario">Regístrate</a>
                </p>
            </div>
        </form>
    </div>
</body>
</html>

<!--Función para mostrar u ocultar la contraseña-->
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // ✅ Esperar a que el DOM esté completamente cargado
            const toggleButton = document.getElementById('togglePassword');
            const passwordInput = document.getElementById('passwordInput');
            const visibilityIcon = document.getElementById('visibilityIcon');

            if (toggleButton && passwordInput && visibilityIcon) {
                toggleButton.addEventListener('click', function(e) {
                    e.preventDefault(); // Prevenir comportamiento por defecto

                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        visibilityIcon.textContent = 'visibility_off';
                    } else {
                        passwordInput.type = 'password';
                        visibilityIcon.textContent = 'visibility';
                    }
                });
            } else {
                console.warn('No se encontraron los elementos necesarios para la visibilidad de contraseña');
            }
        });
    </script>
}