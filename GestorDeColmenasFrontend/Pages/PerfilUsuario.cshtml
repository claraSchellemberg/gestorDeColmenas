@page
@model GestorDeColmenasFrontend.Pages.PerfilUsuarioModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="light" lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mi Perfil - Gestión de Apiarios</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries,typography"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#FFC107",
                        "background-light": "#F8F9FA",
                        "background-dark": "#1e293b",
                        "card-light": "#FFFFFF",
                        "card-dark": "#334155",
                        "text-light": "#343A40",
                        "text-dark": "#e2e8f0",
                        "text-muted": "#6B7280",
                        "border-light": "#e5e7eb",
                        "border-dark": "#475569",
                        "accent-honey": "#E69B00",
                        "accent-green": "#4CAF50",
                        "accent-blue": "#2196F3",
                        "accent-orange": "#FF9800",
                    },
                    fontFamily: { "display": ["Inter", "sans-serif"] },
                    borderRadius: { "DEFAULT": "0.5rem", "lg": "0.75rem", "xl": "1rem", "full": "9999px" }
                }
            }
        };
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="font-display bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark">
    <div class="flex h-screen w-full flex-col lg:flex-row">

        <!-- Sidebar (solo escritorio lg+) -->
        <aside class="hidden lg:flex w-64 flex-col border-r border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark p-4">
            <div class="mb-6 flex items-center gap-3 px-2">
                <div class="text-primary size-6">
                    <svg class="w-full h-full" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M21.92,8.44l-8-4.57a2,2,0,0,0-1.84,0l-8,4.57a2,2,0,0,0-1,1.73V13.8a2,2,0,0,0,.13,2.44,1,1,0,0,0,.87.56H12a1,1,0,0,0,1-1V13.5a1,1,0,0,1,2,0V20a1,1,0,0,0,2,0V13.5a1,1,0,0,1,2,0v2.3a2,2,0,0,0,1,1.73l.2,0a2,2,0,0,0,1.72-1,2,2,0,0,0,.08-1V10.17A2,2,0,0,0,21.92,8.44ZM12,11.25a2.75,2.75,0,1,1,2.75-2.75A2.75,2.75,0,0,1,12,11.25Z"></path>
                    </svg>
                </div>
                <h1 class="text-lg font-bold">Gestión de Apiarios</h1>
            </div>

            <div class="hidden lg:flex items-center gap-3 px-2 mb-6">
                <img src="@(Model.Usuario?.FotoPerfil ?? "https://via.placeholder.com/150")"
                     alt="Avatar"
                     class="h-10 w-10 rounded-full object-cover" />
                <div class="flex flex-col">
                    <span class="text-base font-medium">@(Model.Usuario?.Nombre ?? "Usuario")</span>
                    <span class="text-text-muted text-sm">@(Model.Usuario?.Email ?? "email@ejemplo.com")</span>
                </div>
            </div>

            <nav class="flex flex-col gap-2">
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg bg-primary/20 text-text-light dark:text-text-dark font-medium" href="/PerfilUsuario">
                    <span class="material-symbols-outlined">person</span>
                    <span class="text-sm">Mi Perfil</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 text-text-muted" href="/Dashboard">
                    <span class="material-symbols-outlined">dashboard</span>
                    <span class="text-sm">Dashboard</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 text-text-muted" href="/ListadoApiarios">
                    <span class="material-symbols-outlined">hive</span>
                    <span class="text-sm">Apiarios</span>
                </a>
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 text-text-muted" href="/ListadoColmenas">
                    <span class="material-symbols-outlined" style="font-variation-settings: 'FILL' 1">hive</span>
                    <span class="text-sm">Colmenas</span>
                </a>
            </nav>

            <div class="mt-auto">
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 text-text-muted" href="#">
                    <span class="material-symbols-outlined">logout</span>
                    <span class="text-sm">Cerrar Sesión</span>
                </a>
            </div>
        </aside>

        <!-- Contenido principal -->
        <div class="flex-1 flex flex-col min-h-screen lg:min-h-0">

            <!-- Header móvil -->
            <header class="md:hidden flex items-center justify-between p-4 border-b border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark">
                <a href="/Dashboard" class="p-2 -ml-2">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <h1 class="text-xl font-bold">Mi Perfil</h1>
                <div class="w-10"></div>
            </header>

            <!-- Contenido -->
            <main class="flex-1 overflow-y-auto p-6 md:p-8">
                <div class="mx-auto max-w-4xl">
                    <h2 class="hidden md:block mb-8 text-4xl font-black tracking-tight">Mi Perfil</h2>

                    <div class="bg-card-light dark:bg-card-dark rounded-xl border border-border-light dark:border-border-dark shadow-sm overflow-hidden">

                        <div class="border-b border-border-light dark:border-border-dark p-6">
                            <div class="flex flex-col items-center gap-4 md:flex-row md:items-center md:gap-6">
                                <div class="relative flex-shrink-0">
                                    <img src="@(Model.Usuario?.FotoPerfil ?? "https://via.placeholder.com/150")"
                                         alt="Foto de perfil"
                                         class="w-24 h-24 md:w-28 md:h-28 lg:w-24 lg:h-24 rounded-full object-cover" />
                                    <button class="absolute bottom-0 right-0 flex h-8 w-8 items-center justify-center rounded-full border-2 border-card-light dark:border-card-dark bg-primary text-gray-800 hover:bg-accent-honey">
                                        <span class="material-symbols-outlined text-base">edit</span>
                                    </button>
                                </div>
                                <div class="text-center md:text-left">
                                    <h3 class="text-xl md:text-[22px] font-bold">Foto de Perfil</h3>
                                    <p class="text-text-muted text-sm md:text-base mt-1">Sube una nueva foto de 400x400px.</p>
                                </div>
                            </div>
                        </div>

                        <form method="post" asp-page-handler="GuardarPerfil" class="p-6">
                            @Html.AntiForgeryToken()

                            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                                <!-- Nombre -->
                                <div>
                                    <label class="block text-sm md:text-base font-medium mb-2" for="nombre">Nombre</label>
                                    <input asp-for="Usuario.Nombre"
                                           class="w-full h-12 rounded-lg border border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark px-4 py-3 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none"
                                           type="text" />
                                </div>

                                <!-- Número de Apicultor -->
                                <div>
                                    <label class="block text-sm md:text-base font-medium mb-2" for="numeroApicultor">Número de Apicultor</label>
                                    <input asp-for="Usuario.NumeroApicultor"
                                           class="w-full h-12 rounded-lg border border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark px-4 py-3 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none"
                                           type="text" />
                                </div>

                                <!-- Email (span completo) -->
                                <div class="md:col-span-2">
                                    <label class="block text-sm md:text-base font-medium mb-2" for="email">Correo Electrónico</label>
                                    <input asp-for="Usuario.Email"
                                           class="w-full h-12 rounded-lg border border-border-light dark:border-border-dark bg-background-light dark:bg-background-dark px-4 py-3 text-text-muted cursor-not-allowed"
                                           type="email"
                                           readonly />
                                </div>

                                <!-- Teléfono -->
                                <div>
                                    <label class="block text-sm md:text-base font-medium mb-2" for="telefono">Teléfono</label>
                                    <input asp-for="Usuario.NumeroTelefono"
                                           class="w-full h-12 rounded-lg border border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark px-4 py-3 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none"
                                           type="tel" />
                                </div>

                                <!-- Canal preferido -->
                                <div>
                                    <label class="block text-sm md:text-base font-medium mb-2">Canal de notificación</label>
                                    <div class="flex gap-3">
                                        <label class="flex items-center gap-2 cursor-pointer">
                                            <input asp-for="Usuario.MedioDeComunicacionDePreferencia" type="radio" value="EMAIL" class="h-4 w-4" />
                                            <span class="text-sm">Email</span>
                                        </label>
                                        <label class="flex items-center gap-2 cursor-pointer">
                                            <input asp-for="Usuario.MedioDeComunicacionDePreferencia" type="radio" value="SMS" class="h-4 w-4" />
                                            <span class="text-sm">SMS</span>
                                        </label>
                                        <label class="flex items-center gap-2 cursor-not-allowed opacity-50">
                                            <input asp-for="Usuario.MedioDeComunicacionDePreferencia" type="radio" value="WHATSAPP" class="hidden" disabled />
                                            <span class="text-sm text-text-muted">WhatsApp (próximo)</span>
                                        </label>
                                    </div>
                                </div>

                                <!-- Contraseña (solo móvil) -->
                                <div class="md:hidden">
                                    <label class="block text-sm font-medium mb-2" for="password">Nueva Contraseña</label>
                                    <input asp-for="NuevaContrasena"
                                           class="w-full h-12 rounded-lg border border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark px-4 py-3 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none"
                                           type="password"
                                           placeholder="Dejar vacío para no cambiar" />
                                </div>
                            </div>

                            <!-- Botones -->
                            <div class="flex flex-col-reverse sm:flex-row justify-end gap-3 border-t border-border-light dark:border-border-dark mt-6 pt-6">
                                <a href="/Dashboard"
                                   class="flex h-10 items-center justify-center rounded-lg bg-black/5 dark:bg-white/10 px-4 text-sm font-bold hover:bg-black/10 dark:hover:bg-white/20 transition-colors">
                                    Cancelar
                                </a>
                                <button type="submit"
                                        class="flex h-10 items-center justify-center rounded-lg bg-primary px-4 text-sm font-bold text-gray-800 hover:bg-accent-honey transition-colors">
                                    Guardar Cambios
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </main>

            <!-- Navegación móvil -->
            <nav class="md:hidden sticky bottom-0 bg-card-light dark:bg-card-dark border-t border-border-light dark:border-border-dark shadow-lg">
                <div class="flex justify-around p-2">
                    <a class="flex flex-col items-center justify-center p-2 rounded-lg text-primary" href="/PerfilUsuario">
                        <span class="material-symbols-outlined">person</span>
                        <span class="text-xs mt-1 font-bold">Perfil</span>
                    </a>
                    <a class="flex flex-col items-center justify-center p-2 rounded-lg text-text-muted hover:bg-gray-100 dark:hover:bg-gray-800" href="/Dashboard">
                        <span class="material-symbols-outlined">dashboard</span>
                        <span class="text-xs mt-1">Dashboard</span>
                    </a>
                    <a class="flex flex-col items-center justify-center p-2 rounded-lg text-text-muted hover:bg-gray-100 dark:hover:bg-gray-800" href="/ListadoApiarios">
                        <span class="material-symbols-outlined">hive</span>
                        <span class="text-xs mt-1">Apiarios</span>
                    </a>
                </div>
            </nav>
        </div>
    </div>
</body>
</html>