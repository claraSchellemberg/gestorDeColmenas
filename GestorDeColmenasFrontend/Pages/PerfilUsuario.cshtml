@page
@model GestorDeColmenasFrontend.Pages.PerfilUsuarioModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="light" lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mi Perfil - Gestión de Apiarios</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries,typography"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#FFC107",
                        "background-light": "#F8F9FA",
                        "background-dark": "#1e293b",
                        "card-light": "#FFFFFF",
                        "card-dark": "#334155",
                        "text-light": "#343A40",
                        "text-dark": "#e2e8f0",
                        "text-muted": "#6B7280",
                        "border-light": "#e5e7eb",
                        "border-dark": "#475569",
                        "accent-honey": "#E69B00",
                        "accent-green": "#4CAF50",
                        "accent-blue": "#2196F3",
                        "accent-orange": "#FF9800",
                    },
                    fontFamily: { "display": ["Inter", "sans-serif"] },
                    borderRadius: { "DEFAULT": "0.5rem", "lg": "0.75rem", "xl": "1rem", "full": "9999px" }
                }
            }
        };
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="font-display bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark">
    <div class="flex h-screen w-full flex-col lg:flex-row">

        <aside class="w-64 border-r border-border-light dark:border-border-dark bg-white dark:bg-gray-900 hidden lg:flex flex-col sticky top-0 h-screen">
            <div class="p-6">
                <div class="flex items-center gap-3 mb-8 mt-2">
                    <img alt="Profile" class="w-10 h-10 rounded-full" src="@(Model.Usuario?.FotoPerfil ?? "https://via.placeholder.com/150")" />
                    <div class="overflow-hidden">
                        <p class="text-sm font-bold truncate">@(Model.Usuario?.Nombre ?? "Usuario")</p>
                        <p class="text-xs text-gray-500 truncate">@(Model.Usuario?.Email ?? "")</p>
                    </div>
                </div>
                <nav class="space-y-1">
                    <a class="flex items-center gap-3 px-3 py-2 rounded-lg bg-primary/10 text-accent-honey transition-colors" href="/PerfilUsuario">
                        <span class="material-symbols-outlined">person</span>
                        <span class="text-sm font-medium">Mi Perfil</span>
                    </a>
                    <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors" href="/Dashboard">
                        <span class="material-symbols-outlined">dashboard</span>
                        <span class="text-sm font-medium">Dashboard</span>
                    </a>
                    <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors" href="/ListadoApiarios">
                        <span class="material-symbols-outlined">hive</span>
                        <span class="text-sm font-medium">Apiarios</span>
                    </a>
                    <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors" href="/ListadoColmenas">
                        <span class="material-symbols-outlined" style="font-variation-settings: 'FILL' 1">hive</span>
                        <span class="text-sm font-bold">Colmenas</span>
                    </a>
                </nav>
            </div>
            <div class="mt-auto p-6 border-t border-border-light dark:border-border-dark">
                <a class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-600 dark:text-gray-400 hover:text-red-500 transition-colors" href="#">
                    <span class="material-symbols-outlined">logout</span>
                    <span class="text-sm font-medium">Cerrar Sesión</span>
                </a>
            </div>
        </aside>

        <!-- Contenido principal -->
        <div class="flex-1 flex flex-col min-h-screen lg:min-h-0">

            <!-- Header móvil -->
            <header class="md:hidden flex items-center justify-between p-4 border-b border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark">
                <a href="/Dashboard" class="p-2 -ml-2">
                    <span class="material-symbols-outlined">arrow_back</span>
                </a>
                <h1 class="text-xl font-bold">Mi Perfil</h1>
                <div class="w-10"></div>
            </header>

            <!-- Contenido -->
            <main class="flex-1 overflow-y-auto p-6 md:p-8">
                <div class="mx-auto max-w-4xl">
                    <h2 class="hidden md:block mb-8 text-4xl font-black tracking-tight">Mi Perfil</h2>

                    <div class="bg-card-light dark:bg-card-dark rounded-xl border border-border-light dark:border-border-dark shadow-sm overflow-hidden">

                        <div class="border-b border-border-light dark:border-border-dark p-6">
                            <div class="flex flex-col items-center gap-4 md:flex-row md:items-center md:gap-6">
                                <div class="relative flex-shrink-0">
                                    <img src="@(Model.Usuario?.FotoPerfil ?? "https://via.placeholder.com/150")"
                                         alt="Foto de perfil"
                                         class="w-24 h-24 md:w-28 md:h-28 lg:w-24 lg:h-24 rounded-full object-cover" />
                                    <button class="absolute bottom-0 right-0 flex h-8 w-8 items-center justify-center rounded-full border-2 border-accent-honey dark:border-card-dark bg-primary/10 text-accent-honey-800 hover:bg-accent-honey">
                                        <span class="material-symbols-outlined text-base">edit</span>
                                    </button>
                                </div>
                                <div class="text-center md:text-left">
                                    <h3 class="text-xl md:text-[22px] font-bold">Foto de Perfil</h3>
                                    <p class="text-text-muted text-sm md:text-base mt-1">Sube una nueva foto de 400x400px.</p>
                                </div>
                            </div>
                        </div>

                        <form method="post" asp-page-handler="GuardarPerfil" class="p-6">
                            @Html.AntiForgeryToken()

                            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                                <!-- Nombre -->
                                <div>
                                    <label class="block text-sm md:text-base font-medium mb-2" for="nombre">Nombre</label>
                                    <input asp-for="Usuario.Nombre"
                                           class="w-full h-12 rounded-lg border border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark px-4 py-3 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none"
                                           type="text" />
                                </div>

                                <!-- Número de Apicultor -->
                                <div>
                                    <label class="block text-sm md:text-base font-medium mb-2" for="numeroApicultor">Número de Apicultor</label>
                                    <input asp-for="Usuario.NumeroApicultor"
                                           class="w-full h-12 rounded-lg border border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark px-4 py-3 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none"
                                           type="text" />
                                </div>

                                <!-- Email (span completo) -->
                                <div class="md:col-span-2">
                                    <label class="block text-sm md:text-base font-medium mb-2" for="email">Correo Electrónico</label>
                                    <input asp-for="Usuario.Email"
                                           class="w-full h-12 rounded-lg border border-border-light dark:border-border-dark bg-background-light dark:bg-background-dark px-4 py-3 text-text-muted cursor-not-allowed"
                                           type="email"
                                           readonly />
                                </div>

                                <!-- Teléfono -->
                                <div>
                                    <label class="block text-sm md:text-base font-medium mb-2" for="telefono">Teléfono</label>
                                    <input asp-for="Usuario.NumeroTelefono"
                                           class="w-full h-12 rounded-lg border border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark px-4 py-3 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none"
                                           type="tel" />
                                </div>

                                <!-- Canal preferido -->
                                <div>
                                    <label class="block text-sm md:text-base font-medium mb-2">Canal de notificación</label>
                                    <div class="flex gap-3">
                                        <label class="flex items-center gap-2 cursor-pointer">
                                            <input asp-for="Usuario.MedioDeComunicacionDePreferencia" type="radio" value="EMAIL" class="h-4 w-4" />
                                            <span class="text-sm">Email</span>
                                        </label>
                                        <label class="flex items-center gap-2 cursor-pointer">
                                            <input asp-for="Usuario.MedioDeComunicacionDePreferencia" type="radio" value="SMS" class="h-4 w-4" />
                                            <span class="text-sm">SMS</span>
                                        </label>
                                    </div>
                                </div>

                                <!-- Contraseña: versión escritorio (md+) con diseño igual a Login/Registro -->
                                <div class="hidden md:block md:col-span-2">
                                    <div class="grid grid-cols-2 gap-4">
                                        <div>
                                            <label class="block text-sm md:text-base font-medium mb-2" for="nuevaContrasenaDesktop">Nueva Contraseña</label>
                                            <div class="relative">
                                                <input asp-for="NuevaContrasena"
                                                       id="nuevaContrasenaDesktop"
                                                       class="w-full h-12 rounded-lg border border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark px-4 pr-12 py-3 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none"
                                                       type="password"
                                                       placeholder="Dejar vacío para no cambiar" />
                                                <button type="button"
                                                        class="absolute right-3 top-1/2 -translate-y-1/2 text-zinc-400 dark:text-zinc-500 hover:text-zinc-600 dark:hover:text-zinc-400 transition-colors p-1"
                                                        data-toggle-password="nuevaContrasenaDesktop"
                                                        aria-label="Mostrar/ocultar contraseña">
                                                    <span class="material-symbols-outlined" aria-hidden="true">visibility</span>
                                                </button>
                                            </div>
                                            <span asp-validation-for="NuevaContrasena" class="text-red-600 dark:text-red-400 text-xs mt-1"></span>
                                        </div>
                                        <div>
                                            <label class="block text-sm md:text-base font-medium mb-2" for="confirmarContrasenaDesktop">Confirmar Contraseña</label>
                                            <div class="relative">
                                                <input asp-for="ConfirmarContrasena"
                                                       id="confirmarContrasenaDesktop"
                                                       class="w-full h-12 rounded-lg border border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark px-4 pr-12 py-3 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none"
                                                       type="password"
                                                       placeholder="Repite la nueva contraseña" />
                                                <button type="button"
                                                        class="absolute right-3 top-1/2 -translate-y-1/2 text-zinc-400 dark:text-zinc-500 hover:text-zinc-600 dark:hover:text-zinc-400 transition-colors p-1"
                                                        data-toggle-password="confirmarContrasenaDesktop"
                                                        aria-label="Mostrar/ocultar contraseña">
                                                    <span class="material-symbols-outlined" aria-hidden="true">visibility</span>
                                                </button>
                                            </div>
                                            <span asp-validation-for="ConfirmarContrasena" class="text-red-600 dark:text-red-400 text-xs mt-1"></span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Contraseña (solo móvil) con diseño igual a Login/Registro -->
                                <div class="md:hidden">
                                    <label class="block text-sm font-medium mb-2" for="nuevaContrasenaMobile">Nueva Contraseña</label>
                                    <div class="relative">
                                        <input asp-for="NuevaContrasena"
                                               id="nuevaContrasenaMobile"
                                               class="w-full h-12 rounded-lg border border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark px-4 pr-12 py-3 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none"
                                               type="password"
                                               placeholder="Dejar vacío para no cambiar" />
                                        <button type="button"
                                                class="absolute right-3 top-1/2 -translate-y-1/2 text-zinc-400 dark:text-zinc-500 hover:text-zinc-600 dark:hover:text-zinc-400 transition-colors p-1"
                                                data-toggle-password="nuevaContrasenaMobile"
                                                aria-label="Mostrar/ocultar contraseña">
                                            <span class="material-symbols-outlined" aria-hidden="true">visibility</span>
                                        </button>
                                    </div>
                                    <span asp-validation-for="NuevaContrasena" class="text-red-600 dark:text-red-400 text-xs mt-1"></span>
                                </div>
                            </div>

                            <!-- Botones -->
                            <div class="flex flex-col-reverse sm:flex-row justify-end gap-3 border-t border-border-light dark:border-border-dark mt-6 pt-6">
                                <a href="/Dashboard"
                                   class="px-4 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 font-medium border btn border-gray-400/60 dark:border-gray-500/60 bg-transparent  hover:bg-gray-100 dark:hover:bg-gray-600">
                                    Cancelar
                                </a>
                                <button type="submit"
                                        class="nline-flex items-center justify-center gap-2 rounded-lg bg-primary/10 text-accent-honey border-accent-honey border-2 px-6 py-2.5 text-sm font-bold shadow-sm transition-all hover:bg-accent-honey hover:text-white focus:ring-2 focus:ring-primary focus:ring-offset-2">
                                    Guardar Cambios
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </main>

            <!-- Navegación móvil -->
            <nav class="md:hidden sticky bottom-0 bg-card-light dark:bg-card-dark border-t border-border-light dark:border-border-dark shadow-lg">
                <div class="flex justify-around p-2">
                    <a class="flex flex-col items-center justify-center p-2 rounded-lg text-primary" href="/PerfilUsuario">
                        <span class="material-symbols-outlined">person</span>
                        <span class="text-xs mt-1 font-bold">Perfil</span>
                    </a>
                    <a class="flex flex-col items-center justify-center p-2 rounded-lg text-text-muted hover:bg-gray-100 dark:hover:bg-gray-800" href="/Dashboard">
                        <span class="material-symbols-outlined">dashboard</span>
                        <span class="text-xs mt-1">Dashboard</span>
                    </a>
                    <a class="flex flex-col items-center justify-center p-2 rounded-lg text-text-muted hover:bg-gray-100 dark:hover:bg-gray-800" href="/ListadoApiarios">
                        <span class="material-symbols-outlined">hive</span>
                        <span class="text-xs mt-1">Apiarios</span>
                    </a>
                </div>
            </nav>
        </div>
    </div>

    @section Scripts {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Maneja todos los botones que tengan el atributo data-toggle-password
                document.querySelectorAll('[data-toggle-password]').forEach(function (btn) {
                    btn.addEventListener('click', function (e) {
                        e.preventDefault();
                        var targetId = btn.getAttribute('data-toggle-password');
                        var input = document.getElementById(targetId);
                        if (!input) return;
                        if (input.type === 'password') {
                            input.type = 'text';
                            btn.querySelector('.material-symbols-outlined').textContent = 'visibility_off';
                        } else {
                            input.type = 'password';
                            btn.querySelector('.material-symbols-outlined').textContent = 'visibility';
                        }
                    });
                });
            });
        </script>
    }
</body>
</html>