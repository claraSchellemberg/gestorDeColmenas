@page
@model GestorDeColmenasFrontend.Pages.RegistroUsuarioModel
@{
}

<!DOCTYPE html>
<html class="light" lang="es">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Registro - Gestor de Apiarios</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#FFC107",
                        "primary-dark": "#CA8A04",
                        "background-light": "#F8F9FA",
                        "background-dark": "#1e293b",
                        "text-light": "#374151",
                        "text-dark": "#f3f4f6",
                        "accent-honey": "#E69B00",
                        "border-light": "#e5e7eb",
                        "border-dark": "#374151",
                    },
                    fontFamily: {
                        "display": ["Manrope", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style type="text/tailwindcss">
        body {
            font-family: 'Manrope', sans-serif;
        }
        .soft-shadow {
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.04), 0 8px 10px -6px rgba(0, 0, 0, 0.04);
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark min-h-screen flex items-center justify-center p-3 sm:p-4 md:p-6">
    <div class="w-full max-w-sm md:max-w-md lg:max-w-lg bg-white dark:bg-zinc-900 rounded-lg sm:rounded-xl soft-shadow overflow-hidden flex flex-col border border-zinc-100 dark:border-zinc-800">
        
        <!-- Header -->
        <div class="pt-6 sm:pt-8 pb-4 sm:pb-6 px-4 sm:px-6 flex flex-col items-center">
            <div class="mb-3 sm:mb-4 flex items-center justify-center w-14 sm:w-16 h-14 sm:h-16 bg-primary/10 rounded-full text-accent-honey">
                <svg class="w-8 sm:w-10 h-8 sm:h-10 text-accent-honey" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2L4.5 6.5v11L12 22l7.5-4.5v-11L12 2z"></path>
                    <path d="M12 22V12"></path>
                    <path d="M12 12l7.5-4.5"></path>
                    <path d="M12 12L4.5 7.5"></path>
                    <path d="M7.5 10.5l4.5 2.5 4.5-2.5"></path>
                    <path d="M7.5 15.5l4.5 2.5 4.5-2.5"></path>
                    <path d="M12 7l4.5-2.5"></path>
                    <path d="M12 7L7.5 4.5"></path>
                </svg>
            </div>
            <h1 class="text-lg sm:text-xl font-extrabold tracking-tight text-center text-zinc-900 dark:text-white">Gestor de Apiarios</h1>
            <p class="text-xs text-zinc-500 dark:text-zinc-400 mt-1 text-center">Crea tu cuenta para comenzar</p>
        </div>

        <!-- Error/Success Messages -->
        @if (!string.IsNullOrEmpty(Model.MensajeError))
        {
            <div class="mx-4 sm:mx-6 mb-3 p-2 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-900/50 rounded-lg text-red-700 dark:text-red-400 text-xs">
                <span class="material-symbols-outlined text-sm align-middle mr-1">error</span>
                @Model.MensajeError
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.MensajeExito))
        {
            <div class="mx-4 sm:mx-6 mb-3 p-2 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-900/50 rounded-lg text-green-700 dark:text-green-400 text-xs">
                <span class="material-symbols-outlined text-sm align-middle mr-1">check_circle</span>
                @Model.MensajeExito
            </div>
        }

        <!-- Form -->
        <form method="post" class="px-4 sm:px-6 pb-6 sm:pb-8 flex flex-col gap-3 sm:gap-4">
            
            <!-- Nombre -->
            <div class="flex flex-col gap-1.5">
                <label class="text-zinc-700 dark:text-zinc-300 text-xs sm:text-sm font-semibold flex items-center gap-1.5">
                    <span class="material-symbols-outlined text-sm">person</span>
                    <span>Nombre completo</span>
                </label>
                <input asp-for="NuevoUsuario.Nombre"
                       class="form-input w-full rounded-lg border border-zinc-200 dark:border-zinc-700 bg-white dark:bg-zinc-800 text-zinc-900 dark:text-white h-9 sm:h-10 px-3 focus:ring-2 focus:ring-primary/20 focus:border-primary placeholder:text-zinc-400 text-xs sm:text-sm transition-all"
                       placeholder="Ej. Juan Pérez"
                       required />
                <span asp-validation-for="NuevoUsuario.Nombre" class="text-red-600 dark:text-red-400 text-xs"></span>
            </div>

            <!-- Número de Apicultor -->
            <div class="flex flex-col gap-1.5">
                <label class="text-zinc-700 dark:text-zinc-300 text-xs sm:text-sm font-semibold flex items-center gap-1.5">
                    <span class="material-symbols-outlined text-sm">badge</span>
                    <span>Número de apicultor</span>
                </label>
                <input asp-for="NuevoUsuario.NumeroApicultor"
                       class="form-input w-full rounded-lg border border-zinc-200 dark:border-zinc-700 bg-white dark:bg-zinc-800 text-zinc-900 dark:text-white h-9 sm:h-10 px-3 focus:ring-2 focus:ring-primary/20 focus:border-primary placeholder:text-zinc-400 text-xs sm:text-sm transition-all"
                       placeholder="Ej. AP-001"
                       required />
                <span asp-validation-for="NuevoUsuario.NumeroApicultor" class="text-red-600 dark:text-red-400 text-xs"></span>
            </div>

            <!-- Email -->
            <div class="flex flex-col gap-1.5">
                <label class="text-zinc-700 dark:text-zinc-300 text-xs sm:text-sm font-semibold flex items-center gap-1.5">
                    <span class="material-symbols-outlined text-sm">mail</span>
                    <span>Correo electrónico</span>
                </label>
                <input asp-for="NuevoUsuario.Email"
                       class="form-input w-full rounded-lg border border-zinc-200 dark:border-zinc-700 bg-white dark:bg-zinc-800 text-zinc-900 dark:text-white h-9 sm:h-10 px-3 focus:ring-2 focus:ring-primary/20 focus:border-primary placeholder:text-zinc-400 text-xs sm:text-sm transition-all"
                       placeholder="usuario@ejemplo.com"
                       type="email"
                       required />
                <span asp-validation-for="NuevoUsuario.Email" class="text-red-600 dark:text-red-400 text-xs"></span>
            </div>

            <!-- Teléfono -->
            <div class="flex flex-col gap-1.5">
                <label class="text-zinc-700 dark:text-zinc-300 text-xs sm:text-sm font-semibold flex items-center gap-1.5">
                    <span class="material-symbols-outlined text-sm">smartphone</span>
                    <span>Número de celular</span>
                </label>
                <input asp-for="NuevoUsuario.NumeroTelefono"
                       class="form-input w-full rounded-lg border border-zinc-200 dark:border-zinc-700 bg-white dark:bg-zinc-800 text-zinc-900 dark:text-white h-9 sm:h-10 px-3 focus:ring-2 focus:ring-primary/20 focus:border-primary placeholder:text-zinc-400 text-xs sm:text-sm transition-all"
                       placeholder="+598 99 123 456"
                       type="tel" />
                <span asp-validation-for="NuevoUsuario.NumeroTelefono" class="text-red-600 dark:text-red-400 text-xs"></span>
            </div>

            <!-- Canal Preferido -->
            <div class="flex flex-col gap-1.5">
                <label class="text-zinc-700 dark:text-zinc-300 text-xs sm:text-sm font-semibold">Canal de notificación</label>
                <div class="grid grid-cols-2 gap-2">
                    <!-- Email -->
                    <label class="flex items-center justify-center p-2 border border-zinc-200 dark:border-zinc-700 rounded-lg cursor-pointer hover:bg-gray-50 dark:hover:bg-zinc-800 transition-colors has-[:checked]:border-primary has-[:checked]:bg-primary/5">
                        <input asp-for="NuevoUsuario.MedioDeComunicacionDePreferencia"
                               type="radio"
                               value="0"
                               class="sr-only" />
                        <span class="text-xs font-medium text-zinc-700 dark:text-zinc-300">Email</span>
                    </label>
                    
                    <!-- SMS -->
                    <label class="flex items-center justify-center p-2 border border-zinc-200 dark:border-zinc-700 rounded-lg cursor-pointer hover:bg-gray-50 dark:hover:bg-zinc-800 transition-colors has-[:checked]:border-primary has-[:checked]:bg-primary/5">
                        <input asp-for="NuevoUsuario.MedioDeComunicacionDePreferencia"
                               type="radio"
                               value="1"
                               class="sr-only" />
                        <span class="text-xs font-medium text-zinc-700 dark:text-zinc-300">SMS</span>
                    </label>
                    
                    <!-- WhatsApp Deshabilitado -->
                    <label class="flex items-center justify-center p-2 border border-zinc-200 dark:border-zinc-700 rounded-lg cursor-not-allowed opacity-50 bg-gray-50 dark:bg-zinc-800/50">
                        <span class="text-xs font-medium text-zinc-500 dark:text-zinc-400">WhatsApp*</span>
                    </label>
                </div>
                <p class="text-xs text-zinc-500 dark:text-zinc-400 -mt-1">*WhatsApp se implementará próximamente</p>
                <span asp-validation-for="NuevoUsuario.MedioDeComunicacionDePreferencia" class="text-red-600 dark:text-red-400 text-xs"></span>
            </div>

            <!-- Contraseña -->
            <div class="flex flex-col gap-1.5">
                <label class="text-zinc-700 dark:text-zinc-300 text-xs sm:text-sm font-semibold flex items-center gap-1.5">
                    <span class="material-symbols-outlined text-sm">lock</span>
                    <span>Contraseña</span>
                </label>
                <div class="relative">
                    <input asp-for="NuevoUsuario.Contraseña"
                           id="passwordInput"
                           class="form-input w-full rounded-lg border border-zinc-200 dark:border-zinc-700 bg-white dark:bg-zinc-800 text-zinc-900 dark:text-white h-9 sm:h-10 px-3 pr-10 focus:ring-2 focus:ring-primary/20 focus:border-primary placeholder:text-zinc-400 text-xs sm:text-sm transition-all"
                           placeholder="••••••••"
                           type="password"
                           required />
                    <button type="button"
                            class="absolute right-2 top-1/2 -translate-y-1/2 text-zinc-400 dark:text-zinc-500 hover:text-zinc-600 dark:hover:text-zinc-400 transition-colors p-0.5"
                            id="togglePassword"
                            onclick="togglePasswordVisibility()"
                            aria-label="Mostrar/ocultar contraseña">
                        <span class="material-symbols-outlined text-sm" id="visibilityIcon">visibility</span>
                    </button>
                </div>
                <span asp-validation-for="NuevoUsuario.Contraseña" class="text-red-600 dark:text-red-400 text-xs"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit"
                    class="w-full flex items-center justify-center gap-2
                     rounded-lg bg-primary/10 text-accent-honey
                     border-2 border-accent-honey
                     px-6 py-3 text-sm font-bold shadow-sm
                     transition-colors
                     hover:bg-accent-honey hover:text-white">
                <span>Crear cuenta</span>
                <span class="material-symbols-outlined hidden sm:inline text-lg relative top-[1px]">
                    arrow_forward
                </span>
            </button>

            <!-- Login Link -->
            <div class="text-center">
                <p class="text-zinc-500 dark:text-zinc-400 text-xs">
                    ¿Ya tienes cuenta?
                    <a class="text-accent-honey dark:text-accent-honey font-bold hover:underline transition-colors" href="/LoginUsuario">Inicia sesión</a>
                </p>
            </div>
        </form>
    </div>
</body>     
</html>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleButton = document.getElementById('togglePassword');
            const passwordInput = document.getElementById('passwordInput');
            const visibilityIcon = document.getElementById('visibilityIcon');
            
            if (toggleButton && passwordInput && visibilityIcon) {
                toggleButton.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        visibilityIcon.textContent = 'visibility_off';
                    } else {
                        passwordInput.type = 'password';
                        visibilityIcon.textContent = 'visibility';
                    }
                });
            }
        });
    </script>
}